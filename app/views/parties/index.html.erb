<p id="notice"><%= notice %></p>

<div id="paties-index">
	<div class="container">
		<%= link_to 'New Party', new_party_path %>
		
		<!-- 検索機能 -->
		<section id="search-party">
			<div class="title">
				<img class="icon-search" src="<%= image_path 'icons/icon_search.png' %>">
				<h3>スケジュールを検索</h3>
			</div>
			<table class="table table-hover">
				<tbody>
					<tr>
						<th>開催日</th>
						<td>
							<div class="input-group">
								<input type="text" class="form-control date" />
								<span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
							</div>
						</td>
					</tr>
					<tr>
						<th>場所</th>
						<td>@TaroQ</td>
					</tr>
					<tr>
						<th>人数</th>
						<td>@TaroQ</td>
					</tr>
					<tr>
						<th>状況</th>
						<td>@TaroQ</td>
					</tr>

				</tbody>
			</table>



			
		</section>

		<section id="paties-list">
			<ul class="paties-list">
				<% @parties.each do |party| %>
				<li>
					<table class="table">
						<tbody>
							<tr>
								<th>タイトル</th>
								<td><%= party.title %></td>
							</tr>
							<tr>
								<th>会場</th>
								<td><%= party.venue %></td>
							</tr>
							<tr>
								<th>女性料金</th>
								<td><%= party.male_fee %></td>
							</tr>
							<tr>
								<th>男性料金</th>
								<td><%= party.women_fee %></td>
							</tr>



						</tbody>
					</table>
					<%= link_to 'Show', party %>
					<%= link_to 'Edit', edit_party_path(party) %>
					<%= link_to 'Destroy', party, method: :delete, data: { confirm: 'Are you sure?' } %>
				</li>
				<% end %>
			</ul>
		</section>
	</div>
</div>

