<div id="participants-form">
	<div class="container">
		<h1 class="page-title">参加フォーム</h1>

		<div class="participants-form-warp">
			<section class="step">
				<div class="active"><p>参加者情報入力→</p></div>
				<div><p>参加者情報確認→</p></div>
				<div><p>完了</p></div>
			</section>

			<% if participant.errors.any? %>
				<div id="error_explanation">
					<h2><%= pluralize(participant.errors.count, "error") %> prohibited this participant from being saved:</h2>
					<ul>
						<% participant.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

			<% #参加者フォーム %>
			<section class="form">
				<%= form_with(model: participant, url: party_participants_path, local: true) do |f| %>
					<%= f.hidden_field :user_id , value: current_user.id %>
					
					<table class="table">
						<tbody>
							<tr>
								<th>参加人数</th>
								<td><%= f.select :entry_count, t('participants.entry_count'), value: @participant.entry_count  %></td>
							</tr>
							<tr>
								<th>趣味</th>
								<td><%= f.text_area :hoby , class: "form-control" %></td>
							</tr>
							<tr>
								<th>自己PR</th>
								<td><%= f.text_area :self_pr , class: "form-control" %></td>
							</tr>
						</tbody>
					</table>

					<div class="actions">
						<%= f.submit %>
					</div>
				<% end %>
			</section>
		</div>
	</div>
</div>